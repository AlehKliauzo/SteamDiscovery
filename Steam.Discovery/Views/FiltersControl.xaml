<UserControl x:Class="Steam.Discovery.Views.FiltersControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d"
             d:DataContext="{Binding Source={StaticResource Locator}, Path=Filters}">
    <TabControl Margin="5 5 5 5"
                SelectedIndex="{Binding SelectedTab, Converter={StaticResource SelectedTabToIndexConverter}}">
        <TabItem Header="Filters"
                 controls:ControlsHelper.HeaderFontSize="18">
            <StackPanel Orientation="Vertical">

                <CheckBox Margin="5 5 5 5"
                          IsChecked="{Binding IsNameContainsFilterEnabled}">
                    <CheckBox.Content>
                        <StackPanel Orientation="Horizontal">
                            <TextBox IsReadOnly="True"
                                     BorderThickness="0"
                                     Text="name contains" />

                            <TextBox Width="80"
                                     Text="{Binding NameContains, UpdateSourceTrigger=PropertyChanged}"
                                     Margin="0"
                                     BorderThickness="0 0 0 1" />
                        </StackPanel>
                    </CheckBox.Content>
                </CheckBox>

                <CheckBox Margin="5 5 5 5"
                          IsChecked="{Binding IsExcludeGamesFilterEnabled}">
                    <CheckBox.Content>
                        <StackPanel Orientation="Horizontal">
                            <TextBox IsReadOnly="True"
                                     BorderThickness="0"
                                     Text="exclude games" />
                        </StackPanel>
                    </CheckBox.Content>
                </CheckBox>

                <TextBox Text="{Binding ExcludeGames, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource TextBoxMultilineWithAutoHeight}"
                         Margin="30 0 0 0"/>

                <CheckBox Margin="5 5 5 5"
                          IsChecked="{Binding IsReleasedAfterFilterEnabled}">
                    <CheckBox.Content>
                        <StackPanel Orientation="Horizontal">
                            <TextBox IsReadOnly="True"
                                     BorderThickness="0"
                                     Text="released after" />

                            <TextBox Width="80"
                                     Text="{Binding ReleasedAfter, UpdateSourceTrigger=PropertyChanged}"
                                     Margin="0"
                                     BorderThickness="0 0 0 1" />
                        </StackPanel>
                    </CheckBox.Content>
                </CheckBox>

                <CheckBox Margin="5 5 5 5"
                          IsChecked="{Binding IsMoreThanXReviewsFilterEnabled}">
                    <CheckBox.Content>
                        <StackPanel Orientation="Horizontal">
                            <TextBox IsReadOnly="True"
                                     BorderThickness="0"
                                     Text="has more than" />

                            <TextBox Width="60"
                                     Text="{Binding MoreThanXReviews, UpdateSourceTrigger=PropertyChanged}"
                                     Margin="0"
                                     BorderThickness="0 0 0 1" />

                            <TextBox IsReadOnly="True"
                                     BorderThickness="0"
                                     Text="reviews" />
                        </StackPanel>
                    </CheckBox.Content>
                </CheckBox>

                <CheckBox Margin="5 5 5 5"
                          IsChecked="{Binding IsDoesntHaveTagsFilterEnabled}">
                    <CheckBox.Content>
                        <StackPanel Orientation="Horizontal">
                            <TextBox IsReadOnly="True"
                                     BorderThickness="0"
                                     Text="doesn't have tags" />

                            <TextBox Text="Tags"
                                     Cursor="Hand"
                                     IsReadOnly="True"
                                     BorderThickness="0">
                                <TextBox.InputBindings>
                                    <MouseBinding MouseAction="LeftClick"
                                                  Command="{Binding ShowTagsWindowCommand}" />
                                </TextBox.InputBindings>
                            </TextBox>
                        </StackPanel>
                    </CheckBox.Content>
                </CheckBox>

                <TextBox Text="{Binding DoesntHaveTags, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource TextBoxMultilineWithAutoHeight}"
                         Margin="30 0 0 0"
                         GotFocus="TextBox_GotFocus" />

                <CheckBox Margin="5 5 5 5"
                          IsChecked="{Binding IsHasTagsFilterEnabled}">
                    <CheckBox.Content>
                        <TextBox IsReadOnly="True"
                                 BorderThickness="0"
                                 Text="has tags" />
                    </CheckBox.Content>
                </CheckBox>

                <TextBox Text="{Binding HasTags, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource TextBoxMultilineWithAutoHeight}"
                         Margin="30 0 0 0"
                         GotFocus="TextBox_GotFocus_1" />
            </StackPanel>
        </TabItem>

        <TabItem Header="Tags priority"
                 controls:ControlsHelper.HeaderFontSize="18">
            <StackPanel Orientation="Vertical">

                <StackPanel Orientation="Horizontal">
                    <TextBox IsReadOnly="True"
                             BorderThickness="0"
                             Text="tags sympathy (between -10 and 10)" />

                    <TextBox Text="Tags"
                             Cursor="Hand"
                             IsReadOnly="True"
                             BorderThickness="0">
                        <TextBox.InputBindings>
                            <MouseBinding MouseAction="LeftClick"
                                          Command="{Binding ShowTagsWindowCommand}" />
                        </TextBox.InputBindings>
                    </TextBox>
                </StackPanel>

                <TextBox Text="{Binding SoftTags, UpdateSourceTrigger=PropertyChanged}"
                         Width="250"
                         Height="300"
                         BorderThickness="0 0 0 1"
                         HorizontalAlignment="Left"
                         VerticalScrollBarVisibility="Auto"
                         TextWrapping="Wrap"
                         AcceptsReturn="True">
                </TextBox>
            </StackPanel>
        </TabItem>
    </TabControl>
</UserControl>
